<div class="container">
    <div class="row">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="statisticsModalLabel">Statistics</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="modal-body">
                            <select id="timeRange" class="form-control" >
                                <option>...</option>
                                <option id="1">Day</option>
                                <option id="2">Week</option>
                                <option id="3">Month</option>
                            </select>


                        <div class="modal-footer" id="stats" style="display:block">
                            <label>Total pomodoros:</label>
                            <label id="total">0</label>
                            <br />
                            <label>Completed pomodoros:</label>
                            <label id="completed">0</label>
                            <br />
                            <label>Canceled pomodoros:</label>
                            <label id="canceled">0</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#stats").hide();
    });

    $("#timeRange").change(function () {
        if ($("#timeRange option:selected").val() != "...") {
            Pomodoro().GetUserStatistics(user.userId, parseInt($(this).children(":selected").attr("id")));
            $("#stats").show();
        }
    });
</script>